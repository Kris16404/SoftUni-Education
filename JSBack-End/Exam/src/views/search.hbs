<section class='search'>
  <h1>Search</h1>

  <form class='search-form' method='POST'>
    <input
      type='text'
      class='search-name'
      name='searchName'
      placeholder='Search Name...'
    />
    <input
      type='text'
      class='search-type'
      name='searchType'
      placeholder='Search Type...'
    />
    <button type='submit' class='btn-search'>Search</button>
  </form>

  <!--If there are matches after search-->
  {{#if result}}
    {{#each result}}
      <div class='search-result'>
        <div class='search-list'>
          <a href='/details/{{this._id}}' class='added-electronics-in-market'>
            <img src='{{this.image}}' class='picture-added-electronics' />
            <h3>{{this.name}}</h3>
            <span>Price: ${{this.price}}</span>
          </a>
        </div>
      </div>
    {{/each}}
  {{else}}
    <!--If there are no matches-->
    <div class='no-match'>
      <p>No match was found!</p>
    </div>
  {{/if}}
</section>