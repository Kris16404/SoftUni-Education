<main id='catalog'>
  <section class='game-market'>
    <h1>Game Trade Code</h1>
    <div class='offer-list'>
    {{#if games}}
    {{#each games}}
      <div class='game'>
        <div class='game-img'>
          <img src='{{this.image}}' />
        </div>
        <div class='game-info'>
          <h1>{{this.name}}</h1>
          <p><span>Platform: </span>{{this.platform}}</p>
          <p><span>Genre: </span>{{this.genre}}</p>
          <p><span>Price: </span>${{this.price}}</p>
        </div>

        <a href='/details/{{this._id}}' class='btn-details'>Details</a>
      </div>
    {{/each}}
    </div>
    {{else}}
    <div class="no-offer">
      <p>There are no game offers found!</p>
    </div>
    {{/if}}
  </section>
</main>