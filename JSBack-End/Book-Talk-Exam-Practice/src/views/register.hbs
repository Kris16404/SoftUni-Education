{{#each errorMessages}}
  <div class='errorContainer'>
    <p>{{this}}</p>
  </div>
{{/each}}
<section class='register-form-container'>
  <!-- In case of error, you should display div with class "errorContainer" -->
  <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

  <form method='POST'>
    <h3>Register</h3>
    <label>Email</label>
    <input type='email' name='email' class='box' id='register-email' />
    <label>Username</label>
    <input type='text' name='username' class='box' id='register-username' />
    <label>Password</label>
    <input type='password' name='password' class='box' id='register-password' />
    <label>Confirm Password</label>
    <input type='password' name='rePass' class='box' id='register-rePass' />
    <input type='submit' value='Register' class='btn' />
    <p>Have an account ? <a href='/users/login'>Click here</a></p>
  </form>
</section>